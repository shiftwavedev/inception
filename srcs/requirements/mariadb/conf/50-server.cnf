# MariaDB Server Configuration
# Custom configuration for Inception project

[server]

[mariadbd]
# Process ID file location
pid-file = /run/mysqld/mysqld.pid

# MariaDB base directory
basedir = /usr

# Binary log expiration (days)
expire_logs_days = 10

[embedded]

[mariadbd]

# MariaDB 11.7+ specific configuration
[mariadb-11.7]
# Custom: Data directory for database storage
datadir = /var/lib/mysql

# Custom: Unix socket for local connections
socket = /run/mysqld/mysqld.sock

# Custom: Accept connections from any IP address (required for Docker networking)
# Default would be 127.0.0.1 (localhost only)
bind_address = *

# Custom: MySQL protocol port
port = 3306

# Custom: Run MariaDB server as 'mysql' system user for security
user = mysql
